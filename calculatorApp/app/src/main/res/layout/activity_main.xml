<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="-"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/minusBtn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="264dp" app:layout_constraintStart_toEndOf="@+id/plusBtn"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="/"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/divideBtn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="264dp"
            app:layout_constraintStart_toEndOf="@+id/multiplyBtn"/>
    <Button
            android:text="2"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/minusBtn"
            app:layout_constraintStart_toEndOf="@+id/button1" android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="418dp" android:id="@+id/guideline"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="470dp" android:id="@+id/guideline2"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="522dp" android:id="@+id/guideline3"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="574dp" android:id="@+id/guideline4"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="626dp" android:id="@+id/guideline5"/>
    <Button
            android:text="5"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button5" app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button2" android:layout_marginStart="4dp"/>
    <Button
            android:text="8"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button7" android:layout_marginStart="4dp"/>
    <Button
            android:text="1"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/plusBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="4dp"/>
    <Button
            android:text="4"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/button1"/>
    <Button
            android:text="0"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button10"
            app:layout_constraintTop_toBottomOf="@+id/button8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="108dp"
    />
    <Button
            android:text="3"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/multiplyBtn"
            app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="9"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button9"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button8" android:layout_marginStart="4dp"/>
    <Button
            android:text="6"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button5" android:layout_marginStart="4dp"/>
    <Button
            android:text="+"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/plusBtn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="264dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"/>
    <Button
            android:text="X"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/multiplyBtn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="264dp" app:layout_constraintStart_toEndOf="@+id/minusBtn"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="="
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/equalsBtn"
            app:layout_constraintTop_toBottomOf="@+id/divideBtn"
            app:layout_constraintStart_toEndOf="@+id/button3"/>
    <Button
            android:text="7"
            android:layout_width="78dp"
            android:layout_height="51dp"
            android:id="@+id/button7" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="164dp" android:id="@+id/guideline6"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="243dp" android:id="@+id/guideline7"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
    />
    <Button
            android:text="AC"
            android:layout_width="76dp"
            android:layout_height="49dp" android:id="@+id/clearBtn"
            app:layout_constraintTop_toBottomOf="@+id/backBtn"
            android:layout_marginStart="84dp" app:layout_constraintStart_toEndOf="@+id/button10"
    />
    <Button
            android:text="BACK"
            android:layout_width="77dp"
            android:layout_height="47dp"
            android:id="@+id/backBtn" app:layout_constraintStart_toEndOf="@+id/button9" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/equalsBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>