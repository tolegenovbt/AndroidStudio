<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CategoryActivity">

    <TextView
            android:layout_width="190dp"
            android:layout_height="104dp"
            android:id="@+id/welcomeText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="111dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="110dp"/>
    <Button
            android:text="CELEBRITIES"
            android:layout_width="213dp"
            android:layout_height="125dp"
            android:id="@+id/celebritiesCategoryBtn"
            app:layout_constraintTop_toBottomOf="@+id/sportCategoryBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Sport"
            android:layout_width="213dp"
            android:layout_height="125dp"
            android:id="@+id/sportCategoryBtn"
            app:layout_constraintTop_toBottomOf="@+id/MathCategoryBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="4dp"/>
    <Button
            android:text="MATH"
            android:layout_width="213dp"
            android:layout_height="125dp"
            android:id="@+id/MathCategoryBtn" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>