<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <TextView
            android:text="TextView"
            android:layout_width="213dp"
            android:layout_height="66dp"
            android:id="@+id/questionText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="108dp"
    />
    <Button
            android:text="Button"
            android:layout_width="128dp"
            android:layout_height="97dp"
            android:id="@+id/answer2" android:layout_marginStart="52dp"
            app:layout_constraintStart_toEndOf="@+id/answer0" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/questionText"
    />
    <Button
            android:text="Button"
            android:layout_width="128dp"
            android:layout_height="99dp"
            android:id="@+id/answer3" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/answer2" android:layout_marginStart="52dp"
            app:layout_constraintStart_toEndOf="@+id/answer1"/>
    <Button
            android:text="Button"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:id="@+id/answer1" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/answer0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>
    <Button
            android:text="Button"
            android:layout_width="127dp"
            android:layout_height="104dp"
            android:id="@+id/answer0" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/questionText"/>
    <Button
            android:text="NEXT QUESTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextBtn" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/answer3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="139dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="141dp" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="88dp"
            android:layout_height="39dp"
            android:id="@+id/scoreText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="78dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="167dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="167dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>